<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_margin">@dimen/default_button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_digit_text_size</item>
        <item name="android:backgroundTint">@color/digit_button</item>

